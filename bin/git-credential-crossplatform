#!/bin/sh

# Use system's keystore, if available
if [[ "$OSTYPE" == "darwin"* ]]; then
    git credential-osxkeychain $@
elseif [[ "$OSTYPE" == "cygwin" ]]; then
    git credential-wincred $@
elseif [[ "$OSTYPE" == "linux" ]]; then
    git credential-gnome-keyring $@
else
    # fallback: store in RAM for 1 hour
    git credential-cache --timeout 3600 $@
fi
